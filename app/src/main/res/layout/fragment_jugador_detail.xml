<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/jugadorLayout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_player_card"
    tools:context=".ui.elementos.JugadorDetailFragment"
    app:layout_constraintBottom_toTopOf="@+id/nav_view">

    <ImageView
        android:id="@+id/caraJugDetail"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="228dp"
        android:theme="@style/Theme.AppCompat.Light"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tVNombreJugDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="396dp"
        android:background="@drawable/round_corner"
        android:elevation="5dp"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:text="NOMBRE"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tVEdadJugDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-black"
            android:text="EDAD"
            android:layout_marginEnd="5dp"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/tVSiglaPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-black"
            android:text="SIG"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <ImageView
            android:id="@+id/iVBandera"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:elevation="5dp"
            android:theme="@style/Theme.AppCompat.Light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.746"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tVPJJugDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-black"
            android:text="PJ"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/tVGolesJugDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-black"
            android:text="G"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/tVAsJugDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:elevation="5dp"
            android:fontFamily="sans-serif-black"
            android:text="A"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
