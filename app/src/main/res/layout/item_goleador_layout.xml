<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableRow
        android:id="@+id/itemRowJug"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/tVPosJug"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="5dp"
            android:text="POS"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iVJugador"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_column="3"
            android:layout_width="140dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tVNombreJug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="GOLEADOR"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginTop="3dp"
                    android:id="@+id/iVPais"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tVEquipoJug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="Equipo"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tVGolesJug"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:text="G"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tVAsJug"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:text="A"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/SeparadorFilaJug"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/LineaCabeceraJug"
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_span="7"
            android:background="@color/black" >
        </FrameLayout>
    </TableRow>

</TableLayout>